{
  "name": "digital-chaos-index",
  "version": "1.0.0",
  "type": "module",
  "description": "Digital Chaos Index SaaS API",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "morgan": "^1.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "cross-env": "^7.0.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^9.3.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**",
      "!src/docs/**"
    ]
  }
}
